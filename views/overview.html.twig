{% extends 'base.html.twig' %}

{% block body %}
    <ul class="thumbnails">
        {% for gallery in galleries if gallery != null %}
            <li class="span3">
                <a href="{{ app.request.basepath }}/view/{{ gallery.name|replace({' ': '_'})|lower }}/{{ gallery.getCoverImage.getHash }}" class="thumbnail" title="{{ gallery.name }}">
                    <img src="{{ app.request.basepath }}/thumbnail/{{ gallery.getCoverImage.getHash }}" alt="">
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}


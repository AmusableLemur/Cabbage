{% extends 'base.html.twig' %}

{% block body %}
    <ul class="thumbnails">
        {% for gallery in galleries if gallery != null %}
            <li class="span3">
                <a href="{{ app.request.basepath }}/view/{{ gallery.name }}/{{ gallery.getCoverImage.getFileName }}" class="thumbnail" title="{{ gallery.name }}">
                    <img src="{{ app.request.basepath }}/thumbnails/{{ gallery.getCoverImage.getHash }}.jpg" alt="">
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}


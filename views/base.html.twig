<!DOCTYPE html>
<html>

<head>
    <title>Cabbage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{ app.request.basepath }}/static/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <style type="text/css">
        body {
            padding-top: 20px;
            padding-bottom: 40px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="navbar">
            <div class="navbar-inner">
                <a class="brand" href="{{ app.request.basepath }}/">Cabbage</a>
                <form action="{{ app.request.basepath }}/" class="navbar-form pull-right" method="post">
                    <input type="text" name="name" placeholder="Gallery name">
                    <button class="btn btn-success" type="submit">Create new album</button>
                </form>
            </div>
        </div>
        {% block body %}{% endblock %}
    </div>
    <script type="text/javascript" src="http://code.jquery.com/jquery.js"></script>
    <script type="text/javascript" src="{{ app.request.basepath }}/static/js/bootstrap.js"></script>
    <script>
        $(function() {
            $(".thumbnail").tooltip({
                placement: 'bottom',
                trigger: 'hover'
            });
        });
    </script>
</body>

</html>


<!DOCTYPE html>
<html>

<head>
    <title>{% block title %}Cabbage{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{ app.request.basepath }}/static/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <style type="text/css">
        body {
            padding-top: 20px;
            padding-bottom: 40px;
        }

        .caption {
            background: rgba(255, 255, 255, 0.8);
            display: block;
            font-size: 1.3em;
            bottom: 3px;
            position: absolute;
            text-align: center;
        }

        .btn-prev, .btn-next {
            width: 50%;
        }

        #overview .thumbnail {
            position: relative;
        }

        #navigation .btn {
            box-sizing: border-box;
            width: 50%;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="navbar">
            <div class="navbar-inner">
                <a class="brand" href="{{ app.request.basepath }}/">Cabbage</a>
                <form action="{{ app.request.basepath }}/search/" class="navbar-form pull-right" method="post">
                    <input type="text" name="name" placeholder="Search">
                    <button class="btn btn-success" type="submit"><i class="icon-search"></i></button>
                </form>
            </div>
        </div>
        {% block body %}{% endblock %}
    </div>
    <script type="text/javascript" src="http://code.jquery.com/jquery.js"></script>
    <script type="text/javascript" src="{{ app.request.basepath }}/static/js/bootstrap.js"></script>
    <script>
        $(function() {
            $(".thumbnail").tooltip({
                placement: 'bottom',
                trigger: 'hover'
            });
        });
    </script>
</body>

</html>

